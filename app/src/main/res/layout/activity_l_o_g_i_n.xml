<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".LOGIN">

    <ImageView
        android:id="@+id/imagenempresa"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/datamaule"
        android:layout_marginTop="30dp" />
    <EditText
        android:id="@+id/ussr"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imagenempresa"
        android:background="@drawable/bordeedittext"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Usuario" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bordeedittext"
        android:layout_below="@+id/ussr"
        android:paddingStart="10dp"
        android:layout_centerHorizontal="true"
        android:hint="ConstraseÃ±a"
        android:ems="10"
        android:inputType="textPassword" />
    <TextView
        android:id="@+id/database"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:background="@drawable/bordeedittext"
        android:gravity="center_vertical"
        android:layout_below="@+id/pass"
        android:layout_centerHorizontal="true"
        android:hint="Cliente DB"
        android:editable="false"
        android:inputType="none" />

    <Button
        android:id="@+id/lgin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bordeboton"
        android:layout_below="@+id/database"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="Entrar" />

</RelativeLayout>