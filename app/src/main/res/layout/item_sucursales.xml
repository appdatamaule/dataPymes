<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imageview69"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/vigencia"
            android:padding="2dp" />
        <TextView
            android:id="@+id/vigencia"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Vigencia:" />

        <TextView
            android:id="@+id/lineanegra"
            android:layout_width="5dp"
            android:layout_height="85dp"
            android:layout_toEndOf="@id/imageview69"
            android:layout_marginStart="5dp"
            android:background="@android:color/black"
            />
        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/lineanegra"
            android:layout_toRightOf="@id/lineanegra"
            android:layout_marginStart="10dp"
            android:text="Line 1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_toEndOf="@+id/lineanegra"
            android:layout_toRightOf="@id/lineanegra"
            android:layout_marginStart="10dp"
            android:text="line2" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/lineanegra"
            android:layout_toRightOf="@id/lineanegra"
            android:text="line2" />
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:layout_toEndOf="@+id/lineanegra"
            android:layout_toRightOf="@id/lineanegra"
            android:layout_marginStart="10dp"
            android:text="line2" />
        <TextView
            android:id="@+id/text5"
            android:layout_width="0dp"
            android:layout_height="0dp" />
        <TextView
            android:id="@+id/text6"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>